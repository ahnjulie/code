#define _CRT_SECURE_NO_WARNINGS  
#include <stdio.h>
#include <stdlib.h>

struct student
{
	char name[10];
	struct student* next;
};

void addStudent(struct student* pNode)
{
	struct student* newNode = malloc(sizeof(struct student));
	char name[10];

	printf("이름: ");
	scanf("%s", name);

	
	strcpy(newNode->name, name);
	newNode->next = pNode->next;
	pNode->next = newNode;
}

int main(void)
{
	int menu = 0;
	int count = 0;
	struct student *head = malloc(sizeof(struct student));
	struct student* cur;
	
	head->next = NULL;
	cur = head;

	while (menu < 6)
	{
		printf("1. 학생 등록하기\n");
		printf("4. 학생 정보 보기\n");
		printf("5. 종료\n");
		printf("선택:");

		scanf("%d", &menu);

		switch (menu)
		{
			case 1:
				addStudent(cur);
				cur = cur->next;
				break;
			case 4:
				cur = head->next;
				while (cur != NULL)
				{
					printf("이름: %s\n", cur->name);

					cur = cur->next;
				}
				break;
			case 5:
				menu = 6;
				break;
			default:
				menu = 0;
				printf("메뉴에 해당하는 것만 선택가능합니다\n");
				break;
		}
	}
}
